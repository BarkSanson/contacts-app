<div class="container mt-3 text-white">
  <div class="card bg-primary">
    <div class="card-header display-4 text-center">
      Sign up
    </div>
    <div class="card-body">
      <form action="/users/signup" method="POST">
        <div>
          <label for="name" class="form-label fs-4">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div>
          <label for="surname" class="form-label fs-4">Surame</label>
          <input type="text" class="form-control" id="surname" name="surname" />
        </div>
        <div>
          <label for="username" class="form-label fs-4">Userame</label>
          <input type="text" class="form-control" id="username" name="username" />
        </div>
        <div>
          <label for="email" class="form-label fs-4">Name</label>
          <input type="email" class="form-control" id="email" name="email" />
        </div>
        <div>
          <label for="phone" class="form-label fs-4">Phone</label>
          <input type="tel" class="form-control" id="phone" name="phone" />
        </div>
        <div>
          <label for="password" class="form-label fs-4">Password</label>
          <input type="password" class="form-control" id="password" name="password" />
        </div>
        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-success btn-lg">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>