{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show">
      {{{msg}}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  {{/each}}
{{/if}}

{{#if error}}
  <div class="alert alert-danger alert-dismissible fade show">
    {{{error}}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}