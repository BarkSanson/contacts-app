<div class="container mt-3">
  <div class="row">
    {{#each contacts}}
      <div class="col-md-3">
        <div class="card bg-primary">
          <div class="card-body text-white">
            <form>
              <fieldset disabled="disabled">
                <div>
                  <label class="form-label" for="name">Name</label>
                  <input class="form-control" name="name" value="{{{name}}}" />
                </div>
                <div>
                  <label class="form-label" for="surname">Surame</label>
                  <input
                    class="form-control"
                    name="surname"
                    value="{{{surname}}}"
                  />
                </div>
                <div>
                  <label class="form-label" for="email">Email</label>
                  <input
                    class="form-control"
                    name="email"
                    value="{{{email}}}"
                  />
                </div>
                <div>
                  <label class="form-label" for="phone">Phone</label>
                  <input
                    class="form-control"
                    name="phone"
                    value="{{{phone}}}"
                  />
                </div>
              </fieldset>
              <div class="d-grid gap-1 mt-3">
                <a class="btn btn-secondary" href="/contacts/edit/{{{_id}}}"><i
                    class="fas fa-edit"
                  ></i></a>
                <a class="btn btn-danger" href="/contacts/delete/{{{_id}}}"><i
                    class="fas fa-trash"
                  ></i></a>
              </div>
            </form>
          </div>
        </div>
      </div>
    {{else}}
    <div class="col-md-5 mx-auto">
        <div class="alert alert-primary text-center" role="alert">
        <h4 class="alert-heading">You don't have any contact yet!</h4>
        <a class="btn btn-success text-center" href="/contacts/add">Add one!</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>